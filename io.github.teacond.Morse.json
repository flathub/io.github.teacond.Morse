{
    "id" : "io.github.teacond.Morse",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "morse",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "morse=debug",
            "CARGO_NET_OFFLINE": "true"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler",
                "tag": "v0.18.0"
                }
            ]
        },
        {
            "name" : "morse",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dprofile=default"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/teacond/Morse",
                    "tag": "v1.0.5"
                },
                "cargo-sources.json",
		{
            	    "type": "shell",
                    "commands": [
                        "mkdir -p .cargo",
                        "cp cargo/config .cargo/config.toml"
            	    ]
                }
            ]
        }
    ]
}
